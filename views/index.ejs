<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ejs Templating</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="grid grid-cols-6">
      <div class="col-span-2 col-start-3">
        <%- include("header.ejs") %>
        <form action="" class="mb-3">
          <div class="flex gap-2">
            <div class="flex-auto">
              <input
                type="text"
                placeholder="What's next?"
                class="rounded border-2 border-gray-900 w-full p-2 text-sm"
              />
            </div>
            <div class="flex-auto">
              <input
                type="date"
                class="rounded border-2 border-gray-900 w-full p-2 text-sm leading-4"
              />
            </div>
            <div class="flex-none">
              <input
                type="submit"
                value="Add"
                class="text-white bg-green-600 px-5 rounded py-2 font-medium mr-2 mb-2"
              />
            </div>
          </div>
        </form>
        <%- include('todos.ejs') %>
      </div>
    </div>
  </body>
</html>
